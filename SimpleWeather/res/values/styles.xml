<resources>

    <style name="SimpleWeatherTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SimpleWeatherTheme.SWActionBar</item>
        <item name="android:windowBackground">@color/terra_terra_terra</item>
    </style>

    <style name="SimpleWeatherTheme.SWActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/terra_acqua_profonda</item>
        <item name="android:titleTextStyle">@style/SimpleWeatherTheme.SWActionBar.SWTitleTextStyle</item>
    </style>

    <style name="SimpleWeatherTheme.SWActionBar.SWTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/terra_terra</item>
    </style>

    <style name="ProgressDialogTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>